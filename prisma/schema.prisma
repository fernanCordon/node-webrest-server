generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"

  // url      = env("DATABASE_URL")
  // 8 Aquí cambio la variable
  url      = env("POSTGRES_URL")
}

// 9 Creo el modelo
model actio {
  id            Int       @id @default(autoincrement())
  descriptio    String    @db.VarChar
  completumEst  DateTime? @db.Timestamp()
}


